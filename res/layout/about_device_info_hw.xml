<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/about_device_hardware"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/card_margin_start_aqua"
        android:layout_marginEnd="@dimen/card_margin_end_aqua"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/user_crd_bg"
        app:cardElevation="0dp"
        app:cardCornerRadius="33dp">

        <RelativeLayout
            android:id="@+id/device_hardware"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

                <!-- Titles -->
                <TextView
                    android:id="@+id/device_battery_capacity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="20dp"
                    android:drawableLeft="@drawable/ic_device_info_battery_wrapper"
                    android:drawablePadding="8dp"
                    android:drawableTint="?android:attr/colorAccent"
                    style="@style/op_control_text_style_h6"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/op_control_text_color_primary"
                    android:text="@string/device_info_battery"
                    android:textSize="16sp" />
                    
                <TextView
                    android:id="@+id/device_chipset_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:drawableLeft="@drawable/ic_device_info_chipset_wrapper"
                    android:drawablePadding="8dp"
                    android:layout_below="@+id/device_battery_capacity_title"
                    style="@style/op_control_text_style_h6"
                    android:layout_alignParentStart="true"
                    android:text="@string/device_info_chipset"
                    android:drawableTint="?android:attr/colorAccent"
                    android:textColor="@color/op_control_text_color_primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/device_resolution_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:drawableLeft="@drawable/ic_device_info_display_wrapper"
                    android:drawablePadding="8dp"
                    android:drawableTint="?android:attr/colorAccent"
                    android:layout_below="@+id/device_chipset_title"
                    android:text="@string/device_info_resolution"
                    style="@style/op_control_text_style_h6"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/op_control_text_color_primary"
                    android:textSize="16sp" />
                    
                <TextView
                    android:id="@+id/device_storage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:drawableLeft="@drawable/ic_device_info_storage_wrapper"
                    android:drawablePadding="8dp"
                    android:layout_below="@+id/device_resolution_title"
                    android:text="@string/device_info_storage"
                    style="@style/op_control_text_style_h6"
                    android:layout_alignParentStart="true"
                    android:drawableTint="?android:attr/colorAccent"
                    android:textColor="@color/op_control_text_color_primary"
                    android:textSize="16sp" />

                <!-- Summaries -->
                
                <TextView
                    android:id="@+id/device_battery_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    style="@style/op_control_text_style_body1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/op_control_text_color_secondary"
                    android:textSize="16sp" />
                    
                <TextView
                    android:id="@+id/device_chipset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/device_battery_capacity"
                    style="@style/op_control_text_style_body1"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/op_control_text_color_secondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/device_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@style/op_control_text_style_body1"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewStart"
                    android:gravity="start"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/device_chipset"
                    android:textColor="@color/op_control_text_color_secondary"
                    android:textSize="16sp" />
                    
                <TextView
                    android:id="@+id/device_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:layout_below="@+id/device_resolution"
                    style="@style/op_control_text_style_body1"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewStart"
                    android:gravity="start"
                    android:textColor="@color/op_control_text_color_secondary"
                    android:textSize="16sp" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/device_showcase_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center_horizontal">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Titles -->
            <TextView
                android:id="@+id/device_showcase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                style="@style/op_control_text_style_h6"
                android:gravity="center_horizontal|top"
                android:textColor="@color/op_control_text_color_primary"
                android:textSize="18sp"
                android:textStyle="bold" />
                
               <FrameLayout
                    android:id="@+id/phone_image_frame"
                    android:layout_below="@+id/device_showcase"
                    android:layout_width="305dp"
                    android:layout_height="152dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginBottom="-52dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/phone_image"
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="32dp"
                        app:strokeColor="?android:attr/textColorPrimary"
                        app:strokeWidth="3dp">

                        <com.crdroid.settings.utils.WallpaperView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:gravity="bottom"
                            android:elevation="0dp"
                            android:contentDescription="@null"
                            android:orientation="vertical" />
                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

        </RelativeLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
