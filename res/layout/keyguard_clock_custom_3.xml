<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="25dp">
    <LinearLayout
        android:gravity="center|start"
        android:layout_gravity="center|start"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp">
        <TextClock
            android:textSize="70dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center|start"
            android:layout_gravity="center|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:singleLine="true"
            android:alpha="0.5"
            android:layout_alignParentStart="true"
            android:format12Hour="hh"
            android:format24Hour="HH"/>
        <TextClock
            android:textSize="70dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center|start"
            android:layout_gravity="center|start"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:singleLine="true"
            android:layout_alignParentStart="true"
            android:format12Hour="mm"
            android:format24Hour="mm"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90.0">
            <TextClock
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:gravity="center|start"
                android:layout_gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:format12Hour="EEEE"
                android:format24Hour="EEEE"/>
            <TextClock
                android:textSize="10dp"
                android:textColor="@android:color/system_accent1_900"
                android:gravity="center|start"
                android:layout_gravity="center|start"
                android:background="@drawable/custom_background_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:format12Hour="MMMM dd"
                android:format24Hour="MMMM dd"
                android:backgroundTint="@android:color/system_accent1_100"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>