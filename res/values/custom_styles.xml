<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="op_control_text_style_base">
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="op_control_text_style_body1" parent="@style/op_control_text_style_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>
    
    <style name="op_control_text_style_h6" parent="@style/op_control_text_style_base">
        <item name="android:textSize">18.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

   <style name="OptionTitleTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">15sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.HomepagePreferenceTitle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:fontFamily">@string/settingslib_config_headlineFontFamily</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="TextAppearance.riceInfoReleaseSummary">
        <item name="android:textColor">@color/op_control_text_color_primary</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>
    
    <style name="TextAppearance.riceInfoTitle">
        <item name="android:textColor">@color/op_control_text_color_secondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.riceInfoSummary">
        <item name="android:textColor">@color/op_control_text_color_primary</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

      <!-- custom Action Bar -->
    <style name="custom_toolbar.Expanded" parent="custom_toolbar.Collapsed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">75dp</item>
        <item name="android:layout_marginBottom">@dimen/homepage_title_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/homepage_title_margin_horizontal</item>
        <item name="android:layout_marginEnd">75dp</item>
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>
    <style name="custom_toolbar.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">@string/settingslib_config_headlineFontFamily</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
    </style>     
</resources>
